<div class="row">
  <div class="small-12 columns">
    <h1 class="text-center">HoN Graffiti</h1>
  </div>
</div>

<div class="row">
  <div class="small-8 small-offset-2 columns">
    <ul class="quotes">
      <% @quotes.each do |quote| %>
        <li>
          <%= quote.parse_colors %>
        </li>
      <% end %>
    </ul>
    <div class="pagination-centered">
      <%= will_paginate @quotes, renderer: FoundationPagination::Sinatra %>
    </div>
    <form action="/submit" method="POST">
      <div class="row collapse">
        <div class="small-10 columns">
          <input type="text" name="quote[text]" placeholder="Enter quote text" />
        </div>
        <div class="small-2 columns">
          <input class="secondary hollow button postfix" type="submit" value="Submit" />
        </div>
      </div>
    </form>
  </div>
</div>